@model Vintage_World.Models.ChatBox

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="@Url.Content("~/style.css")" rel="stylesheet" />

    <link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">
    <style>
        body {
            width: 100%;
            height: 100%;
            font-family: 'Roboto Condensed', sans-serif;
            margin-top: 25px;
        }

        section {
            box-shadow: 5px 10px #888888;
        }

        h1, h2, h3 {
            margin: 0 0 35px 0;
            font-family: 'Patua One', cursive;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        p {
            margin: 0 0 25px;
            font-size: 18px;
            line-height: 1.6em;
        }

        a {
            color: #26a5d3;
        }

            a:hover, a:focus {
                text-decoration: none;
                color: #26a5d3;
            }

        #contact {
            background: #333333;
            color: #f4f4f4;
            padding-bottom: 70px;
        }
    </style>

    <link href="https://fonts.googleapis.com/css?family=Oswald:700|Patua+One|Roboto+Condensed:700" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container">
                <h1>Contact Us</h1>
                <h3>REGISTER/LOGIN First and Come Back to Mail Us any Questions or Concerns...<i class="em em-grinning"></i></h3>
                <p>Feel free to shout us by feeling the contact form or visiting our social network sites like Fackebook,YouTube,Twitter.</p>
                @if (Session["LoginCustomerName"] == null)
                {
                    <div align="center">
                        @Html.ActionLink("Register", "Create", "Customers", null, htmlAttributes: new { @class = "btn-lg btn-primary" })
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label>Name</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.customername } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.customermail } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>Your Message</label>
                                    @Html.TextAreaFor(model => model.Message, 5, 70, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group ">
                                    <label>Reply:</label>
                                    @Html.Label((string)ViewBag.reply, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                </div>
                                <input type="submit" class="btn-sm btn-danger" value="Send Message">
                            </form>
                            <hr>
                            <h3>Our Social Sites</h3>
                            <ul class="list-inline banner-social-buttons">
                                <li><a href="https://twitter.com/?lang=en" class="btn btn-default btn-lg"><i class="fa fa-twitter"> <span class="network-name">Twitter</span></i></a></li>
                                <li><a href="https://www.facebook.com/" class="btn btn-default btn-lg"><i class="fa fa-facebook"> <span class="network-name">Facebook</span></i></a></li>
                                <li><a href="https://www.youtube.com/channel/UC_kZpIbqg3Mw9GckvULHadw" class="btn btn-default btn-lg"><i class="fa fa-youtube-play"> <span class="network-name">Youtube Channel</span></i></a></li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <h1 align="center" style="margin-top:15px">YOU ARE ALWAYS WELCOME IN OUR VINTAGE WORLD! <i class="em em-blush"></i></h1>
    <div class="container">
        <div class="row-fluid">
            <div class="span8">
                <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed/v1/place?q=91%Nelson%2C%20St%2C%20Brampton%2C%20Canada&key=AIzaSyBwaVcZBO69snuqpC9r5cbRfONgQOmBJpM"></iframe>
            </div>

            <div class="span4">
                <h3>Find Us Here:</h3>
                <address>
                    <strong>Car Sale Management</strong><br>
                    91 Nelson Street West<br>
                    Brampton<br>
                    Ontario<br>
                    L6X1C7<br>
                    <abbr title="Phone">(P):<i class="em em-call_me_hand"></i></abbr> +1568 123 1234
                </address>
            </div>
        </div>
    </div>

}

<div style="margin-top:35px">
    @Html.ActionLink("Back to Home", "Index", "Home", null, htmlAttributes: new { @class = "btn-lg btn-danger" })
</div>
