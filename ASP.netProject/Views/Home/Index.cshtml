@{
    ViewBag.Title = "Home Page";

}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<link href="@Url.Content("~/style.css")" rel="stylesheet" />
<br>

@using (Html.BeginForm("Index", "Cars", FormMethod.Post))
{
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">


            <div class="item active">
                <img src="~/Images/slideshow1.jpg">
                <div class="carousel-caption">
                    @if (Session["LoggedCustomerID"] == null)
                    {
                        <h1>Vintage World</h1>
                    }
                    else
                    {
                        <h1><a href="http://localhost:16981/SellRequests/Create"><input type="button" class="btn btn-danger btn-lg" value="Sell Car" /></a></h1>
                    }

                    <h4>You can find New, Old, Used Vintage Cars on Our Web-site! <br>Don't Waste your time to roam around, Search Hear and buy whatever you are looking for...</h4>
                </div>
            </div>

            <div class="item ">
                <img src="~/Images/slideshow2.jpg">
            </div>
            <div class="item">
                <img src="~/Images/slideshow4.jpg">
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="search">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-section">
                            <div class="row">
                                <form role="form" action="PartList.aspx">
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <div class="serchtile">Condition</div>
                                            <label class="sr-only" for="makes">Condition:</label>

                                            @Html.DropDownList("TypeList", ViewBag.typelist as SelectList, "All Conditions", htmlAttributes: new { @class = "form-control", @id = "selectbasic", @required = "" })

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="serchtile">Make</div>
                                            <label class="sr-only" for="makes">Makes:</label>

                                            @Html.DropDownList("MakeList", (SelectList)ViewBag.carlistname, "Please Select a Make", htmlAttributes: new { @class = "form-control", @id = "selectbasic", @required = "" })

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="serchtile">Car Model</div>
                                            <label class="sr-only" for="model">Car Model:</label>
                                            @Html.DropDownList("ModelList", (SelectList)ViewBag.modellist, "Please Select a Model", htmlAttributes: new { @class = "form-control", @id = "selectbasic", @required = "" })

                                            <div class="input-group">

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <div class="serchtile">Year:</div>
                                            <label class="sr-only" for="model">Year:</label>
                                            @Html.DropDownList("YearList", ViewBag.yearlist as SelectList, "Select a Year", htmlAttributes: new { @class = "form-control", @id = "selectbasic", @required = "" })

                                            <div class="input-group">

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <br>
                                        <input type="submit" value="Search" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}